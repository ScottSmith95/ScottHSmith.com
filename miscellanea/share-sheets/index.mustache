<!-- Share Sheets -->
<!-- Twitter Share Sheet -->
<div class="Sheet unselected" id="Twitter">
	<div class="SheetContent">
		<ul class="itemset">
			<section class="clients">
			<div class="itemcontainer">
				<li><a href="twitter://user?screen_name=ScottSmith95">
					<img class="appicon" src="images/Twitter.png" alt="">
					Twitter
				</a></li>
			</div>
			<div class="itemcontainer">
				<li><a href="twitterrific:///profile?screen_name=ScottSmith95">
					<img class="appicon" src="images/Twitterrific.png" alt="">
					Twitterrific
				</a></li>
			</div>
			<div class="itemcontainer">
				<li><a href="tweetbot:///user_profile/ScottSmith95">
					<img class="appicon" src="images/Tweetbot.png" alt="">
					Tweetbot
				</a></li>
			</div>
			<div class="itemcontainer">
				<li><a>
					<img class="appicon" src="images/Placeholder-Icon.png" alt="">
					Placeholder
				</a></li>
			</div>
			<div class="itemcontainer">
				<li><a>
					<img class="appicon" src="images/Placeholder-Icon.png" alt="">
					Placeholder
				</a></li>
			</div>
			</section>

			<section class="browsers">
			<div class="itemcontainer">
				<li><a href="https://twitter.com/ScottSmith95">
					<img class="appicon" src="images/Safari.png" alt="">
					Right here
				</a></li>
			</div>
			<div class="itemcontainer">
				<li><a href="googlechrome://twitter.com/ScottSmith95">
					<img class="appicon" src="images/Chrome.png" alt="">
					Chrome
				</a></li>
			</div>
			<div class="itemcontainer">
				<li><a href="ophttp://twitter.com/ScottSmith95">
					<img class="appicon" src="images/1Password.png" alt="">
					1Password
				</a></li>
			</div>
			</section>
		</ul>
		<button class="cancel">Cancel</button>
	</div>
</div>

